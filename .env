# ===================================================================
# NOVAMART E-COMMERCE BACKEND - ENVIRONMENT CONFIGURATION
# ===================================================================

# ===================================================================
# ASGARDEO OAUTH2 CONFIGURATION
# ===================================================================
# Replace with your actual Asgardeo organization name
ASGARDEO_ORG_NAME=

# Your Asgardeo application credentials
ASGARDEO_CLIENT_ID=
# ASGARDEO_CLIENT_SECRET=YOUR_CLIENT_SECRET

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# MongoDB connection string (using the one from application.properties)
MONGODB_URI=

# ===================================================================
# JWT CONFIGURATION (for local authentication)
# ===================================================================
# Use a strong secret key for JWT signing
JWT_SECRET=

# JWT expiration time in milliseconds (24 hours)
JWT_EXPIRATION=86400000

# ===================================================================
# CORS CONFIGURATION
# ===================================================================
# Allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# ===================================================================
# RATE LIMITING CONFIGURATION
# ===================================================================
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL=10
RATE_LIMIT_DURATION=1